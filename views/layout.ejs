<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body>
    <header>
      <div class="container">
        <h3>
          <a href="/"><span>Cuisine</span>Express </a>
        </h3>

        <div class="menu-tray" id="menu-tray" onclick="toggleClass(this)">
          <div class="bar1"></div>
          <div class="bar2"></div>
          <div class="bar3"></div>
        </div>

        <nav>
          <ul>
            <% if (loggedIn) { %>

            <!-- Check if logged in user is a private user or business -->
            <% if (currentUser.zipCode) { %>
            <li>
              <a href="<%= `/restaurant/dashboard/${currentUser.name}` %>">
                <%= currentUser.name %>
              </a>
            </li>
            <% } else { %>
            <li>
              <a href="<%= `/users/${currentUser._id}` %>">
                <%= currentUser.fullName %>
              </a>
            </li>
            <% } %>

            <li>
              <a href="/users/logout">Log out</a>
              <%} else {%>
            </li>

            <li>
              <a href="/login">Login</a>
            </li>

            <li>
              <a class="pry-cta" href="/register">Register</a>
            </li>
            <% } %>
          </ul>
        </nav>
      </div>
    </header>

    <div class="flash-message">
      <div class="container">
        <% if (flashMessages) { %> <% if (flashMessages.success) { %>

        <p class="success-message"><%= flashMessages.success %></p>

        <% } else if (flashMessages.error) { %>

        <p class="error-message"><%= flashMessages.error %></p>
        <% } %> <% } %>
      </div>
    </div>

    <%- body %>

    <script src="/js/script.js"></script>
  </body>
</html>
