<h2>
    <%= user.fullName %>
</h2>

<ul>
    <li>
        <%= user.fullName %>
    </li><br>
    <li>
        <%= user.email %>
    </li><br>


    <% userReservation.forEach(reservation=> { %>

        <li>
            <p> Reservation code: <%= reservation.code %></p>
            <p>Restaurant: <%= reservation.restaurant.name %></p>
            <p>Restaurant address: <%= reservation.restaurant.address %></p>
            <p>Customer name: <%= reservation.user.fullName %></p>
            <p>Customer email: <%= reservation.user.email %></p>
            <br>
        </li>
        <% }) %>
    
   
</ul>





<a href="<%= `/users/${user.id}/edit` %>">Edit Profile</a> <br><br>

<button onclick="return confirm('Are you sure you want to delete your account?') ">
    <a href="<%= `/users/${user.id}/delete?_method=DELETE` %>">Delete account</a>
</button>

<a href="<%= `/users` %>">All users</a>